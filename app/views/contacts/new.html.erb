<h2>New Contact</h2>

<% if @contact.errors.any? %>
  <p> say what? </p>
  <ul>
    <% @contact.error.full_messages.each do |message| %>
        <li> <%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @contact do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <%= f.submit %>
<% end %>
